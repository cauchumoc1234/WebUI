extends ../general.pug
block css
    link(rel="stylesheet", href="/css/user/user_login.css")
block content
  .body
    form.login(action='/user/login' method="post" class ="login")
        if error
            p.err #{error}
        div
            label(for='username') Username
            br
            input#username(type='text',name="username", aria-describedby='usernameHelp', maxlength='20', minlength='6')
            br
            label(for='password') Password
            br
            input#password(type='password',name="password", aria-describedby='passwordHelp', maxlength='20', minlength='6')
            br
            small#passwordlHelp.form-text.text-muted Username &amp; Password must have 6-20 character
            br
            button Login
            br
            a(href='/user/create') Create new user
block script
    script(src="/script/user/clear-history.js")

